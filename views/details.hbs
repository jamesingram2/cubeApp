<h1>{{cube.name}}</h1>
<img class="cube" src={{cube.imageUrl}}>
<div class="details">
  <p><span>Description:</span> {{cube.description}}</p>
  <p><span>Difficulty level:</span> {{cube.level}}</p>
  {{#if isLoggedIn}}
  <a class="btn" href="/attach/{{cube._id}}">Attach Accessory</a>
  <a class="btn" href="/edit/{{cube._id}}">Edit Cube</a>
  <a class="btn" href="/delete/{{cube._id}}">Delete Cube</a>
  {{/if}}
  <a class="btn" href="/">Back</a>
</div>
<h2>Accessories</h2>
<div class="accessories">
  {{#if cube.accessories.length}}
  {{#each cube.accessories}}
    {{>updatedDetails}}
  {{/each}}
  {{else}}
  <h3 class="italic">This cube has no accessories yet. . .</h3>
  {{/if}}
</div>